<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.EidtActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@drawable/qinchen">

            <Button
                android:id="@+id/btn_return2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="360dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="设置图片"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_foodpic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_add_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_foodpic"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="takePhoto"
                    android:text="拍照" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:onClick="choosePhoto"
                    android:text="相册" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_food_name"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食物名称"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_nick_food_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/tv_food_name"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_food_name"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_kaluli"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_kaluli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡路里含量"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_kaluli_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/tv_kaluli"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_kaluli"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_foodtype"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_foodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="类型"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_foodtype"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_foodtype"
                android:entries="@array/foodtype"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textSize="20sp" />

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_intrst"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_intrst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食物简介"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_intrst_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_intrst"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>




        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:onClick="save"
            />

    </LinearLayout>

</ScrollView>