<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.NewTwoListActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@drawable/qinchen">

            <Button
                android:id="@+id/btn_return3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="360dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="设置图片"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_foodpic2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_add_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/iv_foodpic2"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="takePhoto"
                    android:text="拍照"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相册"
                    android:onClick="choosePhoto"
                    android:layout_marginLeft="10dp"
                    />




            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_food_name"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_food_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="食物名称"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_food_name2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/tv_food_name2"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_food_name2"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_kaluli"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_kaluli2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡路里含量"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_kaluli_text2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/tv_kaluli2"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_kaluli2"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_foodtype2"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_foodtype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="类型"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_foodtype2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_foodtype2"
                android:entries="@array/foodtype"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_nutri"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/tv_nutri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营养成分"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_nutri_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBaseline="@id/tv_nutri"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/tv_nutri"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_binifit"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_binifit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="益处"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_binifit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_binifit"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:gravity="center"
                android:text="Please input"
                android:textSize="20sp" />

        </RelativeLayout>




        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:onClick="save2"
            />

    </LinearLayout>

</ScrollView>